// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Organization {
  id               Int      @id @default(autoincrement())
  organizationName String   @unique
  description      String
  address          String
  website          String
  email            String  @unique
  phone            String  @unique
  salt             String 
  sessionToken     String  @unique
  users            Admin[]
}

model Admin {
  id                  Int          @id @default(autoincrement())
  organization        Organization @relation(fields: [organizationId], references: [id])
  vendorName          String
  organizationId      Int
  email               String       @unique
  password            String
  firstName           String
  lastName            String
  phone               String      @unique
  username            String       @unique
  salt                String
  sessionToken String  @unique
}

model Transaction {
  id                 Int    @id @default(autoincrement())
  amount             Float
  vendorId           Int
  MerchantRequestID  String
  CheckoutRequestID  String
  ResultCode         String
  ResultDesc         String
  MpesaReceiptNumber String
  TransactionDate    String
  PhoneNumber        String
  TransactionType    String @default("Mpesa")
}
