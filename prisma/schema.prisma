// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Organization {
  id               Int      @id @default(autoincrement())
  organizationName String   @unique
  description      String
  address          String
  website          String
  email            String
  phone            String
  logo             String
  users            Admin[]
  vendors          Vendor[]
}

model Admin {
  id             Int          @id @default(autoincrement())
  organizationId Int
  organization   Organization @relation(fields: [organizationId], references: [id])
  Vendor         Vendor[]
  email          String       @unique
  password       String
  firstName      String
  lastName       String
  phone          String
  username       String       @unique
}

model Vendor {
  id             Int           @id @default(autoincrement())
  vendorName     String
  organizationId Int
  organization   Organization  @relation(fields: [organizationId], references: [id])
  transactions   Transaction[]
  admin          Admin         @relation(fields: [id], references: [id])
  location       String
}

model Transaction {
  id       Int    @id @default(autoincrement())
  amount   Float
  vendorId Int
  vendor   Vendor @relation(fields: [vendorId], references: [id])
  MerchantRequestID String
  CheckoutRequestID String
  ResultCode String
  ResultDesc String
  MpesaReceiptNumber String
  TransactionDate String
  PhoneNumber String
  TransactionType String @default("Mpesa")
}
